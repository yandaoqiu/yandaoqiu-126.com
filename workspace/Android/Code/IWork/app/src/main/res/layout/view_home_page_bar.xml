<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/homepage_bar_left"
        android:onClick="leftOnclick"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"

        />
    <ImageButton
        android:id="@+id/homepage_bar_right"
        android:onClick="rightOnclick"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        />
    <LinearLayout
        android:id="@+id/homepage_bar_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/homepage_bar_right"
        android:layout_toRightOf="@id/homepage_bar_left"
        android:gravity="center"
        android:background="@color/transparent"
        android:orientation="horizontal"
        />
</RelativeLayout>